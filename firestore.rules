rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection â€” each user can only access their own data
    match /users/{userId} {

      // User's loops subcollection
      match /loops/{loopId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // User's profile subcollection (tier data)
      match /profile/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
